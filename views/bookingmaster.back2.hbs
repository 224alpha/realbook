            $(document).ready(function () {
                var table = $('#myTable').DataTable({
                    "order": [[1, 'asc']],
                    rowCallback: function ( row, data, index ) {
                        console.log('rowCallback');
                    }
                });


                $('#myTable tbody').on('click', 'tr', function () {
                    //console.log('clicked');
                    var tr = $(this);
                    var row = table.row( tr );
                    //console.log(row); 
                    if ( row.child.isShown() ) {
                        // This row is already open - close it
                        row.child.hide();
                        tr.removeClass('shown');
                    }
                    else {
                        // Open this row
                        var d = row.data();
                        console.log(d[2]);
                        $.ajax({
                            type: "POST",
                            url: "/bookingmaster/"+d[2],
                            data: {
                                id:d[2]
                            },
                            crossDomain:true,
                            success: function (data) {
                                console.log(data);
                                row.child( '<div class="inner-table"><table class="table table-hover table-sm table-striped table-bordered" id = "child_details"><thead><tr><th>CHECKIN DATE</th><th>ROOM CATEGORY</th><th>NO OF NIGHTS</th></tr></thead><tbody></tbody></table></div>').show();
                                
                                $('#child_details').DataTable({
                                    destroy: true,
                                    data: data.hotel,
                                    columns:[
                                        { "data" : "CHECK_IN_DATE" },
                                        { "data" : "ROOM_CATEGORY" },
                                        { "data" : "NO_OF_NIGHTS" }
                                    ],
                                    "searching": false,
                                    "paging":   false,
                                });
                                tr.addClass('shown');
                            },
                            error: function (xhr, status, error) {
                                swal("Error", "Error detching details", "error");
                            }
                        });
                        
                    }
                });


            });

            




