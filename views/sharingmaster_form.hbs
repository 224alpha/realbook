<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <!--<link href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css" />-->
    <link rel="stylesheet" href="/datepicker/css/bootstrap-datepicker.standalone.min.css">
    <link rel="stylesheet" href="/sharingmaster/stylesheets/index.css">
    <title>Form</title>
  </head>
  <style>
      .back-button{
            position: fixed;
            z-index: 100000;
            top:10px;
            left:10px;
            background:#4179ef;
            padding: 8px 11px;
            border-radius: 50%;
            color: #fff;
            font-size: 18px;
        }
        .back-button:hover{
            color: #fff;
        }
        
  </style>
  <body>

      <div class="loader-container">
          <div class="loader"></div>
      </div>
    <a class="back-button" href="/"><i class="fas fa-home"></i></a>
    <div class="container msssg">
        {{#if msg}}
            <div class="alert err alert-dismissible fade show text-center" role="alert">
                <strong>Data saved sucessfully !</strong>&nbsp;<a href="/sharingmaster/data/1/1" class="btn blue btn-sm">Table</a>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            {{#if err}}
            <div class="alert alert-danger pp alert-dismissible fade show text-center" role="alert">
                <strong>FAILED !</strong> {{errText}}&nbsp;<a href="/sharingmaster/data/1/1" class="btn blue btn-sm">Table</a>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}
    </div>
    

    <div class="container" id="wrapper-main">
        <p class="text-center" id="form-heading">Sharing Master</p>
        <form class="row" method="POST" action="/sharingmaster/form">


           <div class="col-sm" id="part1">

               
                {{#if editable}}     
                    <input id="id" name="editID" value="{{e_id}}" type="hidden">    
                {{/if}}    
               

                <div class="form-group">
                    <label for="selling">Selling company</label>
                    <select class="form-control form-control-sm" name="selling" id="selling">
                        {{#each sellingcompany}}
                            <option value="{{this.id}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="supply">Supply company</label>
                    <select class="form-control form-control-sm" name="supply" id="supply">
                    </select>
                </div>

                <div class="form-group">
                    <label for="component">Component</label>
                    <select class="form-control form-control-sm" name="component" id="component">
                        {{#each component}}
                            <option value="{{this.id}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label for="post_final_purchase_entry">Post Final Purchase Entry</label>
                    <select class="form-control form-control-sm" name="post_final_purchase_entry" id="post_final_purchase_entry">
                        
                        <option value="selling-company">Selling Company</option>
                        <option value="service-company">Service Company</option>
                        
                    </select>
                </div>

                <div class="form-group">
                    <label for="formdate">From date</label>
                    <div class="input-group date">
                        <input class="form-control form-control-sm datepicker" type="text" name="formdate" id="formdate" value="{{formdate}}" placeholder="From date" required>
                        <div class="input-group-append">
                            <button class="btn btn-outline-dark form-control-sm" type="button" id="formdatebutton">
                                <i class="fa fa-calendar"></i>
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="todate">To date</label>
                    <div class="input-group date">
                        <input type="text" class="form-control form-control-sm datepicker" name="todate" type="text" id="todate" value="{{todate}}" placeholder="To date" required>
                        <div class="input-group-append">
                            <button class="btn btn-outline-dark form-control-sm" type="button" id="todatebutton">
                                <i class="fa fa-calendar"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="minshare">Exception Sharing Rule</label>
                    <input class="form-control form-control-sm" id="minshare" name="minshare" value="{{min_share}}" placeholder="Minimum share" required>        
                </div>

                
               
           </div>



           <div class="col-sm" id="part2">

               <div class="container-wrapper">
                   <h4>Sharing Conditions</h4>

                    <div class="form-group">
                        <label for="rule">Select any sharing cndition</label>
                        <select class="form-control form-control-sm" name="rule" id="rule">
                            <option value="sharingpercentage">sharing percentage</option>
                            <option value="share on cost">share on cost</option>
                            <option value="profit as fixed amount to supplier company">profit as fixed amount to supplier company</option>
                            <option value="profit as fixed amount to seller company">profit as fixed amount to seller company</option>
                        </select>
                    </div>
                    <div class="values" id="values">
                        
                    </div>

                    <div class="form-group text-right">
                        <a href="/sharingmaster/form" class="btn btn-theme">Clear fields</a>
                        <input type="submit" class="btn btn-theme"  value="Add condition">
                    </div>
               </div>
               


            </div>

       </form> 
    </div>



    <a class="plus-sign" href="/sharingmaster/data/1/1"><i class="fas fa-list-ul"></i></a>








   








    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <!--<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>-->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <!--datepicker-->
    <!--<script src="https://unpkg.com/gijgo@1.9.11/js/gijgo.min.js" type="text/javascript"></script>-->
    <script src="/datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="/sharingmaster/javascripts/index.js" type="text/javascript"></script>

<script>
   

    {{#if editable}}
        $(document).ready(function () {
            $('#selling > option').each(function() {
                if($(this).val()=='{{e_selling}}'){
                    $(this).attr("selected","selected");
                };
            });

            $('#supply > option').each(function() {
                if($(this).val()=='{{e_supply}}'){
                    $(this).attr("selected","selected");
                };
            });
            $('#component > option').each(function() {
                if($(this).val()=='{{e_component}}'){
                    $(this).attr("selected","selected");
                };
            });
            $('#post_final_purchase_entry > option').each(function() {
                if($(this).val()=='{{e_post_final_purchase_entry}}'){
                    $(this).attr("selected","selected");
                };
            });
            
            $('#rule > option').each(function() {
                if($(this).val()=='{{rule}}'){
                    $(this).attr("selected","selected");
                    changeValue($('#rule option:selected').val());
                    $(".calc1").val('{{value1}}');
                    $(".calc2").val('{{value2}}');
                };
            });

        });
    {{/if}}
    
</script>
</body>
</html>