            //fetch vdetail
                function fetchdetail(id){
                     $.ajax({
                        type: "POST",
                        url: "/bookingmaster/"+id,
                        data: {
                            id:id
                        },
                        crossDomain:true,
                        success: function (data) {
                            console.log(data);
                            $("#vdbody1").html("")
                            $("#vdbody2").html("");
                            $(".fetched").html(formateDate(data.info.FETCHED_ON));
                            $(".operated").html(formateDate(data.info.OPERATED_ON));
                            if(data.hotel.length>0){
                                data.hotel.forEach((ii,index)=>{
                                    index1=index+1;
                                    $("#vdbody1").append('<tr><td>'+index1+'</td><td>'+ii.ROOM_CATEGORY+'</td><td>'+ii.PER_SERVICE_WISE_SUPPLIER_NAME+'</td><td>'+ii.NO_OF_ROOMS+'</td><td>'+ii.NO_OF_NIGHTS+'</td></td>')
                                });
                               
                            }
                            else{
                                $("#vdbody1").append("No record found");
                            }
                            if(data.transport.length>0){
                                data.transport.forEach((ii,index)=>{
                                    index1=index+1;
                                    $("#vdbody2").append('<tr><td>'+index1+'</td><td>'+ii.ROOM_CATEGORY+'</td><td>'+ii.PER_SERVICE_WISE_SUPPLIER_NAME+'</td><td>'+ii.NO_OF_ROOMS+'</td><td>'+ii.NO_OF_NIGHTS+'</td></td>')
                                });
                               
                            }
                            else{
                                $("#vdbody2").append("No record found");
                            }
                           
                            
                             $("#vdetailsFetched").modal("show");
                            
                        },
                        error: function (xhr, status, error) {
                            swal("Error", "Error detching details", "error");
                        }
                    });
                }


                function formateDate(d){
                    var date = new Date(d);
                    var y = date.getFullYear();
                    var m = date.getMonth();
                    var d = date.getDate();
                    return String(d)+"-"+String(m)+"-"+String(y);
                }


        </script>
